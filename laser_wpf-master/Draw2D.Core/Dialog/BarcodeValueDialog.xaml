<Window x:Class="Infini.Draw2D.Core.Dialog.BoxedTextValueDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Infini.Draw2D.Core.Dialog"
             mc:Ignorable="d" 
             Title="Enter Input" WindowStartupLocation="CenterScreen" Height="150" Width="300"
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Text Value:"/>
            <TextBox Name="txtInput" Margin="0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="80" Click="OK_Click"/>
                <Button Content="Cancel" Width="80" Click="Cancel_Click" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
